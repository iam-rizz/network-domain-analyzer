# =============================================================================
# Network & Domain Analyzer - Frontend Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Variables must be prefixed with VITE_ to be exposed to the client
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5000/api

# API request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Authentication (Optional)
# -----------------------------------------------------------------------------
# API key for authenticated requests (batch analysis, export)
# Only set this if you have a valid API key
# VITE_API_KEY=nda_your_api_key_here

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable specific features
VITE_FEATURE_BATCH_ANALYSIS=true
VITE_FEATURE_HISTORY_EXPORT=true
VITE_FEATURE_PORT_SCANNING=true

# -----------------------------------------------------------------------------
# UI Configuration (Optional)
# -----------------------------------------------------------------------------
# Default theme: light, dark, system
VITE_DEFAULT_THEME=system

# Results per page in history
VITE_HISTORY_PAGE_SIZE=20

# Maximum domains in batch input
VITE_BATCH_MAX_DOMAINS=50

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Enable debug mode (shows additional logging)
VITE_DEBUG=false
